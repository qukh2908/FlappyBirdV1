<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.test.GameView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rl_start"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/txt_F_bird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fblogo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="360dp"/>

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/play_button" />
        <ImageView
            android:id="@+id/btn_trophy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/trophy"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/btn_musicOn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_music_note_24"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/btn_musicOff"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_music_off_24"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/btn_audioOn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:padding="10dp"
            android:layout_marginStart="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/btn_audioOff"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_volume_off_24"
            android:padding="10dp"
            android:layout_marginStart="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/btn_skinChange"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_checkroom_24"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_score"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:fontFamily="@font/press_start_2p"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/rl_over"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/press_start_2p"
            android:text="Game Over"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_score_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/press_start_2p"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/txt_best_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_score_over"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
            android:text="Best score:0"
            android:textColor="#FFC107"
            android:textSize="24sp" />

        <Button
            android:id="@+id/txt_restart"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"
            android:fontFamily="@font/press_start_2p"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:shadowRadius="1"
            android:text="RESTART"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>

